---
import NavLink from "./NavLink.astro";
import Logo from "./Logo.astro";
---

<header class="grid grid--header">
  <Logo />
  <nav aria-label="Top level" class="page__nav page__nav--top">
    <ul>
      <NavLink href="/about" emoji="🌷">About</NavLink>
      <NavLink href="/blog" emoji="📝">Blog</NavLink>
      <NavLink href="/links" emoji="🔗">Links</NavLink>
      <NavLink href="/bookmarks" emoji="🔗">Bookmarks</NavLink>
      <NavLink href="/experiments" emoji="🧪">Experiments</NavLink>
      <NavLink href="/curios" emoji="🪐">Curios</NavLink>
      <NavLink href="/guestbook" emoji="👋">Guestbook</NavLink>
    </ul>
  </nav>
</header>

<style>
  header {
    padding: 1.5rem 0 0 0;
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  @media (min-width: 768px) {
    header {
      padding: 3rem 0 0 0;
      gap: 1.25rem;
    }
  }
</style>
