  <style>
    .logo {
      width: 100%;
      flex: 0 0 100%;
      display: flex;
      transform: translateY(-1rem)
    }

    @media (min-width: 992px) {
      .logo {
        width: 12rem;
        flex: 0 0 12rem;
      }
    }
    @keyframes colour {
      0% {
        fill: var(--logo-anim-1);
        stroke: var(--logo-anim-1);
      }

      10% {
        fill: var(--logo-anim-2);
        stroke: var(--logo-anim-2);
      }

      50% {
        fill: var(--logo-anim-3);
        stroke: var(--logo-anim-3);
      }

      60% {
        fill: var(--logo-anim-4);
        stroke: var(--logo-anim-4);
      }

      80% {
        fill: var(--logo-anim-5);
        stroke: var(--logo-anim-5);
      }

      100% {
        fill: var(--logo-anim-6);
        stroke: var(--logo-anim-6);
      }
    }

    @keyframes blink {
      0% {
        fill: var(--logo-x);
      }

      30% {
        fill: transparent;
      }

      100% {
        fill: transparent;
      }
    }

    a:hover .frills-tx,
    a:focus .frills-tx {
      fill: var(--bodybg) !important;
    }

    .frills-tx {
      fill: hsl(330, 70%, 70%);
      stroke-width: 0;
      stroke: hsl(330, 70%, 70%);
    }

    @media (prefers-reduced-motion: no-preference) {
      .frills-tx {
        animation: colour 10s 0s linear infinite forwards alternate;
      }

      a:hover .frills-tx,
      a:focus .frills-tx {
        stroke-width: 2px;
      }

      .frills-x {
        fill: transparent;
        animation-name: blink;
        animation-fill-mode: forwards;
        animation-iteration-count: infinite;
        animation-duration: 7500ms;
      }

      .frills-x:nth-child(3) {
        animation-delay: 1000ms;
      }

      .frills-x:nth-child(2) {
        animation-delay: 1850ms;
      }

      .frills-x:nth-child(1) {
        animation-delay: 2500ms;
      }
    }
  </style>
</div>
