---
import HomeLayout from "../layouts/HomeLayout.astro";
import SideBar from "../components/SideBar.astro";
import Greeting from "../components/homepage/Greeting.jsx";
import Avatar from "../components/homepage/Avatar.jsx";
import Speak from "../components/Speak.jsx";
import BioGrid from "../components/homepage/BioGrid.astro";
import Link from "../components/Link.astro";
import CallOut from "../components/CallOut.astro";
import LatestItem from "../components/LatestItem.astro";
import SpotifyPlayer from "../components/LatestSong.jsx";
