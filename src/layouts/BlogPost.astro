---
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";

const { title, description, date, updatedDate, timeToRead, slug, rawContent } = Astro.props;

const wordCount = rawContent ? rawContent.trim().split(/\s+/).length : null;
---

<BaseLayout>
  <div class="grid grid__2">
    <article class="reading-width post">
      <h1>{title}</h1>
      <div class="metainfo">
        {
          timeToRead && (
            <p>
              <span class="emoji" aria-hidden="true">
                ‚è∞
              </span>
              <span class="value">{timeToRead}</span>
            </p>
          )
        }
        {
          wordCount && (
            <p>
              <span class="emoji" aria-hidden="true">
                üìù
              </span>
              <span class="value">{wordCount} words</span>
            </p>
          )
        }
        {
          slug && (
            <p>
              <span class="emoji" aria-hidden="true">
                üîó
              </span>
              <span class="value">{slug}</span>
            </p>
          )
        }
      </div>

      <div class="post">
        <slot />
      </div>
    </article>
  </div>

  <style>
    @media (min-width: 48rem) {
      article {
        grid-area: main;
      }
    }

    .metainfo {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .metainfo .emoji,
    .metainfo .value {
      font-size: 0.875rem;
      margin-top: 0.25rem;
    }

    .metainfo .value {
      color: var(--subtext);
      letter-spacing: -0.25px;
    }
  </style>
</BaseLayout>
